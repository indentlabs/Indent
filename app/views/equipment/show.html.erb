<%- model_class = @equipment.class -%>

<div class="row">
  <div class="col-xs-3">
    <div class="card">
      <%= render :partial => 'tabs' %>
    </div>
  </div>

  <div class="col-xs-9">
    <div class="card">
      <h1 class="card-heading">
        <%= @equipment.name %>
      </h1>

      <div class="card-body">

        <dl class="dl-horizontal hidden section general_section">
          <%= print_property(t('activerecord.attributes.shared.name'), @equipment.name, "") %>
          <%= print_property(t('activerecord.attributes.equipment.equip_type'), @equipment.equip_type, "") %>
          <%= print_property(t('activerecord.attributes.equipment.description'), @equipment.description, "") %>
          <%= print_property(t('activerecord.attributes.shared.universe'), @equipment.universe ? @equipment.universe.name : "", "universe") %>
        </dl>

        <dl class="dl-horizontal hidden section appearance_section">
          <%= print_property(t('activerecord.attributes.equipment.weight'), @equipment.weight, "") %>
        </dl>

        <dl class="dl-horizontal hidden section history_section">
          <%= print_property(t('activerecord.attributes.equipment.original_owner'), @equipment.original_owner, "character") %>
          <%= print_property(t('activerecord.attributes.equipment.current_owner'), @equipment.current_owner, "character") %>
          <%= print_property(t('activerecord.attributes.equipment.made_by'), @equipment.made_by, "character") %>
          <%= print_property(t('activerecord.attributes.equipment.materials'), @equipment.materials, "equipment") %>
          <%= print_property(t('activerecord.attributes.equipment.year_made'), @equipment.year_made, "") %>
        </dl>

        <dl class="dl-horizontal hidden section abilities_section">
          <%= print_property(t('activerecord.attributes.equipment.magical_properties'), @equipment.magic, "") %>
        </dl>

        <dl class="dl-horizontal hidden section notes_section">
          <%= print_property(t('activerecord.attributes.shared.notes'), @equipment.notes, "") %>
          <% if session[:user] and session[:user] == @equipment.user.id %>
            <%= print_property(t('activerecord.attributes.shared.private_notes'), @equipment.private_notes, "") %>
          <% end %>
        </dl>
      
      </div>
      
      <div class="card-comments">
        <% if session[:user] and session[:user] == @equipment.user.id %>
          <div class="form-actions">
            <%= link_to t('.back', :default => t("helpers.links.back")),
                        equipment_list_path, :class => 'btn'  %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")),
                        equipment_edit_path(@equipment), :class => 'btn' %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
